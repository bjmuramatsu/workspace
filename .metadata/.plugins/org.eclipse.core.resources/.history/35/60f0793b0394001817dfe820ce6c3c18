	// Método para se desmarcar todas as opções marcadas nos agentes
	public void unselectAllSelectdPermissionsAgentes() {

		dsl.checkElementPresence(
				"//td[1][contains(.,'Células')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Células')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'Chamadas')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Chamadas')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'Usuários')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Usuários')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'Tabulações')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Tabulações')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'Relatórios')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Relatórios')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'Permissões')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Permissões')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'Operações')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Operações')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'CTI')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'CTI')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.checkElementPresence(
				"//td[1][contains(.,'Configuração Geral')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable']",
				"//td[1][contains(.,'Configuração Geral')]//following::td[1]/p-checkbox/div/div[2]/span[@class='ui-chkbox-icon ui-clickable pi pi-check']");
		dsl.clicaXpath("//button[contains(.,'Salvar')]");

	}

	// Método para se desmarcar todas as operações marcadas nos supervisores
