	private WebDriver driver;

	public PermissoesPage(WebDriver driver) {
		this.driver = driver;
		dsl = new DSL(driver);

	}

	// Método para se habilitar a visão de células para agentes
	public void displayCelulasAgentes() {
		dsl.clicaXpath(
				"//td[1][contains(.,'Células')]//following::td[1]//p-checkbox[@class='ng-untouched ng-pristine ng-valid']");
		dsl.clicaXpath("//button[contains(.,'Salvar')]");
		dsl.clicaXpath("//button[contains(.,'Confirmar')]");
	}

